@model IEnumerable<BookStore.Models.Author>

@{
    ViewData["Title"] = "Index";
}

<div class="row pt-4">
    <div class="col-6" >
        <h1>List of Authors</h1>
    </div>

    <div class="col-6 text-right">
        <p>
            <a class="btn btn-primary" w-100 asp-action="Create">
                <i class="fas fa-plus"></i> &nbsp;  Create New Author
            </a>
        </p>
    </div>
</div>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td class="text-center">
                <a asp-controller="Author" asp-route-Id="@item.Id" asp-action="Edit" class="btn btn-primary">
                    <i class="fas fa-marker"></i>
                </a>
                <a asp-controller="Author" asp-route-Id="@item.Id" asp-action="Details" class="btn btn-info">
                    <i class="fas fa-info"></i>
                </a>
                <a asp-controller="Author" asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i>
                </a>
                @*@Html.ActionLink("", "Edit", new { id = item.Id })<i class="fas fa-edit"></i> |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@

            </td>
        </tr>
}
    </tbody>
</table>
